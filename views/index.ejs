<%- include("partials/header.ejs") %>

<div class="ui main text container">
	<div class="ui huge header">RESTful BLOG</div>
	<div class="ui top attached segment">
		<div class="ui each divided items">
			<% for(var i=0; i<blogs.length; i++){  %>
				<div class="item">
					<div class="image">
						<img src="<%=blogs[i].image%>">
					</div>
					<div class="content">
						<a class="header" href="/blogs/<%=blogs[i]._id%>"><%= blogs[i].title %> </a>
						<div class="meta">
							<span><%= blogs[i].created.toDateString() %></span>
						</div>
						<div class="description">
							<%- blogs[i].body.substring(0,100) %>...
						</div>
						<div class="extra">
							<a class="ui floated basic violet button"  href="/blogs/<%=blogs[i]._id%>">
								READ MORE
							</a>
						</div>
					</div>
			</div>
		
			<% } %>
		</div>
	</div>
</div>

	
 
	
	

<%- include("partials/footer.ejs") %>